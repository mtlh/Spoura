generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           Int       @id @default(autoincrement())
  name         String?
  email        String    @unique
  profileViews Int       @default(0)
  role         Role      @default(USER)
  purchase     Json
  sessions     Session[]

  @@unique([id])
}

model Session {
  id                Int       @id @default(autoincrement())
  sessionString     String
  user              User[]
  cartProducts      Product[] @relation("inCart")
  favouriteProducts Product[] @relation("inFavourite")

  @@unique([id, sessionString])
}

model Brand {
  id          Int          @id @default(autoincrement())
  name        String       @db.VarChar(50)
  url_slug    String
  icon       String       @db.LongText
  banner      String       @db.LongText
  description String       @db.LongText
  collection  Collection[]
  product     Product[]

  @@unique([id, name, url_slug])
}

model Collection {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(50)
  url_slug    String
  banner      String    @db.LongText
  description String    @db.LongText
  products    Product[]
  brand       Brand?    @relation(fields: [brandId], references: [id])
  brandId     Int?

  @@unique([id, name, url_slug])
  @@index([brandId])
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String      @db.VarChar(50)
  price       Decimal     @db.Decimal(10, 2)
  imgurl      String      @db.LongText
  colour      Json
  fit         String
  size        String?
  brand       Brand       @relation(fields: [brandId], references: [id])
  brandId     Int
  category    String      @default("Mens")
  col_banner  String?
  col_id      Int?
  col_name    String?
  col_slug    String?
  description String?     @db.LongText
  quantity    Int?
  collection  Collection? @relation(fields: [col_id, col_name, col_slug], references: [id, name, url_slug], map: "collection_fk")
  inCart      Session[]   @relation("inCart")
  inFavourite Session[]   @relation("inFavourite")

  @@unique([id])
  @@index([col_id, col_name, col_slug, col_banner])
  @@index([brandId])
}

enum Role {
  USER
  ADMIN
}
