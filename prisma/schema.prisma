generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           Int       @id @default(autoincrement())
  name         String?
  email        String    @unique
  profileViews Int       @default(0)
  role         Role      @default(USER)
  purchase     Json
  sessions     Session[]

  @@unique([id])
}

model Session {
  id                Int       @id @default(autoincrement())
  sessionString     String
  user              User[]
  cartProducts      Product[] @relation("inCart")
  favouriteProducts Product[] @relation("inFavourite")

  @@unique([id, sessionString])
}

model Collection {
  id       Int       @id @default(autoincrement())
  name     String    @db.VarChar(50)
  url_slug String
  banner   String
  products Product[]

  @@unique([id, name, url_slug, banner])
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String      @db.VarChar(50)
  price       Decimal     @db.Decimal(10, 2)
  imgurl      String
  colour      Json
  fit         String
  size        String?
  brand       String      @db.VarChar(50)
  category    String      @default("Mens")
  col_banner  String?
  col_id      Int?
  col_name    String?
  col_slug    String?
  description String?     @db.LongText
  quantity    Int?
  collection  Collection? @relation(fields: [col_id, col_name, col_slug, col_banner], references: [id, name, url_slug, banner], map: "collection_fk")
  inCart      Session[]   @relation("inCart")
  inFavourite Session[]   @relation("inFavourite")

  @@unique([id])
  @@index([col_id, col_name, col_slug, col_banner])
}

enum Role {
  USER
  ADMIN
}
